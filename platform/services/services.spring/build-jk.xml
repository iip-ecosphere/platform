<?xml version="1.0" encoding="UTF-8"?>
<project name="services spring" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
		<script language="javascript">      
		    java.lang.System.setProperty('iip.services.spring.notification', 'SYNCHRONOUS');
		</script>
	    <maven pomFile="pom.xml" goal="package"/>
		<mvnDeployResolveArtifact folderName="IIP-services-spring" pomFile="pom.xml" jarFolder="target" artifactPattern="services.spring-*.*.*.jar" />
	</target>
</project>
