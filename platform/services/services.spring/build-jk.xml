<?xml version="1.0" encoding="UTF-8"?>
<project name="services spring" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
		<delete>
		    <dirset dir="${basedir}" includes="java-server-*" />
            <dirset dir="${basedir}/services.spring.plugintests" includes="java-server-*" />
		</delete>
        <maven pomFile="test.simpleStream.spring/pom.xml" goal="deploy"/>
	    <maven pomFile="pom.xml" goal="deploy"/>
        <maven pomFile="services.spring.plugintests/pom.xml" goal="deploy"/>
        <delete>
            <dirset dir="${basedir}" includes="java-server-*" />
            <dirset dir="${basedir}/services.spring.plugintests" includes="java-server-*" />
        </delete>
	</target>
</project>
