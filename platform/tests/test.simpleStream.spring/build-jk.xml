<?xml version="1.0" encoding="UTF-8"?>
<project name="test.simpleStream.spring" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
		<delete>
		   <fileset dir="target/jars">
		      <include name="*"/>
		   </fileset>
		</delete>
	    <maven pomFile="pom.xml" goal="install"/>
		<mvnDeployResolveArtifact folderName="IIP-test-simpleStream.spring" pomFile="pom.xml" jarFolder="target" artifactPattern="test.simpleStream.spring-*.*.*.???" />
	</target>
</project>
