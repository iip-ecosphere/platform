              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>tests</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-sources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>sources</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-test-sources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>test-sources</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-test-javadoc</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>test-javadoc</classifier>
            </configuration>
          </execution>
          <!-- programmed/generated Python artifacts -->
