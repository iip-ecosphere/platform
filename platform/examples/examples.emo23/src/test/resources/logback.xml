<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.basyx.vab.protocol.basyx.server.VABBaSyxTCPInterface" level="OFF"/>
    <logger name="de.iip_ecosphere.platform.support.aas.basyx.BaSyxRegistry" level="OFF"/>
</configuration>
