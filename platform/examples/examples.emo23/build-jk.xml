<?xml version="1.0" encoding="UTF-8"?>
<project name="examples.python" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- intentionally no deployment here -->
	<target name="maven"> 
        <maven pomFile="pom-model.xml" goal="generate-sources"/>
        <maven pomFile="pom-model.xml" goal="exec:java">
            <arg value='-Dexec.args="ExamplePython src/test/easy gen/py generateAppsNoDeps"'/>
        </maven>
        <maven pomFile="pom.xml" goal="install">
            <arg value="-DskipTests"/>
        </maven>
        <maven pomFile="pom-model.xml" goal="exec:java">
            <arg value='-Dexec.args="ExamplePython src/test/easy gen/py generateApps"'/>
        </maven>        
        <!-- Runs endless...
        <maven pomFile="pom.xml" goal="exec:java">
            <arg value="-DskipTests"/>
        </maven>-->	
	</target>
</project>
