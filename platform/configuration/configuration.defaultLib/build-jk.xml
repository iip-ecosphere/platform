<?xml version="1.0" encoding="UTF-8"?>
<project name="configuration.defaultLib" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
	    <maven pomFile="pom.xml" goal="install">
            <arg value="-Dunpack.force=true"/>
        </maven>
		<mvnDeployResolveArtifact folderName="IIP-configuration.defaultLib" pomFile="pom.xml" jarFolder="target" artifactPattern="configuration.defaultLib-*.*.*.jar" />
	</target>
</project>
