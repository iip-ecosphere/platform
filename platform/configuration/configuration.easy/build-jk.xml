<?xml version="1.0" encoding="UTF-8"?>
<project name="configuration.easy" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
	    <maven pomFile="pom.xml" goal="deploy">
          <arg value="-Dokto.test.easy.model.parent=${model_parent}"/> <!-- must be set in jenkins ANT build step -->
        </maven>
	</target>
</project>
