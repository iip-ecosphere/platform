    // added v2->v3
    def sequenceOf(String) cleanAppTestPlugins(IIPEcosphere config, sequenceOf(String) plugins) {
        Integer pos = -1;
        Integer i = 0;
        String projectVersion = config.iipVer;
        String iipGroup = "de.iip-ecosphere.platform";
        String plugin = iipGroup +":" + aasClientModule(config) + ":" + projectVersion;
        String searchFor = plugin + "/";
        for (String p : plugins) {
            if (p.startsWith(searchFor)) {
                pos = i;
            }
            i = i + 1;
        }
        if (pos >= 0) {
            plugins.removeAt(pos);
            plugins = plugins.insertAt(pos, plugin);
        }
        
        plugins.remove(deviceIdProviderModule(config)); // full artifact
        if (isDefined(config.aasSemanticIdResolver) and config.aasSemanticIdResolver <> null) {
            for (AasSemanticIdResolver p: config.aasSemanticIdResolver) {
                plugins.remove(p.artifact); // full artifact
            }        
        }
        plugins;
    }

