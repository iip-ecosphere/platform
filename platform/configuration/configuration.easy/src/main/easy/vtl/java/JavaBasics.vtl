    // added v2->v3
    def sequenceOf(String) getOktoflowPlugins(IIPEcosphere config, Boolean withLogging=false, Boolean withServices=false, Boolean withAas=true, 
        Boolean withAasServer=false, Boolean withAasClientExclusions=false, Boolean withAasServerExclusions=false, Boolean withTransportModule=true,
        Boolean withDeviceIdProviderModule=false, Boolean withSemanticIdResolverModules=false, Boolean withServiceManagerModule=false, 
        Boolean withCentralMonitoringModule=false, Boolean withDeviceRegistryModules=false, Boolean withContainerManagerModule=false, 
        Boolean withConfigModule=false) {
        String projectVersion = config.iipVer;
        String iipGroup = getIipGroup();
        sequenceOf(String) result = {};
        if (withLogging) {
            // later included simple may collide, we run for now with default implementation
            /*XmlElement dep = appendDependency(dep, iipGroup, "support.log-slf4j-simple", ver);
            XmlElement excl = appendExclusions(dep);
            appendExclusion(excl, "org.slf4j", "slf4j-simple");        */
            appendPlugin(result, iipGroup, "support.log-slf4j-simple", projectVersion);
        }
        appendPlugin(result, iipGroup, "support.yaml-snakeyaml", projectVersion);
        appendPlugin(result, iipGroup, "support.json-jackson", projectVersion);
        appendPlugin(result, iipGroup, "support.commons-apache", projectVersion);
        appendPlugin(result, iipGroup, "support.websocket-websocket", projectVersion);
        appendPlugin(result, iipGroup, "support.rest-spark", projectVersion);
        appendPlugin(result, iipGroup, "support.processInfo-oshi", projectVersion);
        appendPlugin(result, iipGroup, "support.bytecode-bytebuddy", projectVersion);
        appendPlugin(result, iipGroup, "support.http-apache", projectVersion);
        appendPlugin(result, iipGroup, "support.metrics-micrometer", projectVersion);
        if (withAas) {
            appendPlugin(result, iipGroup, aasClientModule(config), projectVersion, add=aasExclusions(config, withAasClientExclusions=withAasClientExclusions, withAasServerExclusions=withAasServerExclusions));
            if (withAasServer) {
                appendPlugin(result, iipGroup, aasServerModule(config), projectVersion);
            } 
        }
        if (withServices) {
            setOf(String) artifacts = {}; // throw away
            for (Service s : Service.allInstances()) {
                addArtifact(s, artifacts, result);
            }
        }
        if (withTransportModule) {
            appendPlugin(result, iipGroup, transportProtocolModule(config), projectVersion);
        }
        if (withDeviceIdProviderModule) {
            result.add(deviceIdProviderModule(config)); // full artifact
        }
        if (withSemanticIdResolverModules) {
            if (isDefined(config.aasSemanticIdResolver) and config.aasSemanticIdResolver <> null) {
                for (AasSemanticIdResolver p: config.aasSemanticIdResolver) {
                    result.add(p.artifact); // full artifact
                }        
            } // use the default builtin
        }
        if (withServiceManagerModule) {
            appendPlugin(result, iipGroup, serviceManagerModule(config), projectVersion);
        }
        if (withCentralMonitoringModule) {
            appendPlugin(result, iipGroup, centralMonitoringModule(config), projectVersion);
        }
        if (withDeviceRegistryModules) {
            appendPlugin(result, iipGroup, deviceRegistryModule(config), projectVersion);
            appendPlugin(result, iipGroup, deviceMgtStorageModule(config), projectVersion);
        }
        if (withContainerManagerModule) {
            appendPlugin(result, iipGroup, containerManagerModule(config), projectVersion);
        }
        if (withConfigModule) {
            appendPlugin(result, iipGroup, "configuration.easy", projectVersion);
        }
        result;
    }
    
