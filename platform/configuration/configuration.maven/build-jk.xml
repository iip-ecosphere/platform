<?xml version="1.0" encoding="UTF-8"?>
<project name="configuration.maven" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
	    <maven pomFile="pom.xml" goal="install">
	        <arg value="-Djava8.home=/usr/lib/jvm/java-8-openjdk-amd64/bin/java"/>
	    	<arg value="-Dmaven.home=${maven.bin.dir}"/>
	    </maven>
		<mvnDeployResolveArtifact folderName="IIP-configurationMaven" pomFile="pom.xml" jarFolder="target" artifactPattern="configuration-plugin-*.*.*.jar" />
	</target>
</project>
