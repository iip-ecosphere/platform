<?xml version="1.0" encoding="UTF-8"?>
<project name="IIP-Ecosphere connectors OPC-UA" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
	    <maven pomFile="pom.xml" goal="install">
            <arg value="-Djacoco.skip=true"/>
	    </maven>
		<mvnDeployResolveArtifact folderName="IIP-connectors-opcua" pomFile="pom.xml" jarFolder="target" artifactPattern="connectors.opcuav1-*.*.*.jar" />
	</target>
</project>
